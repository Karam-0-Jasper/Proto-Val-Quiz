  // ---- RENDER ----
  function renderSales() {
    const tb = document.getElementById('salesTableBody');
    tb.innerHTML = sales.map(s => `
      <tr>
        <td style="font-family:'Space Mono',monospace;font-size:0.75rem;color:var(--muted)">${s.id}</td>
        <td><div class="product-cell"><div class="product-thumb" style="background:rgba(232,255,71,0.08)">üëï</div><div class="product-name">${s.product}</div></div></td>
        <td>${s.customer}</td>
        <td>${s.qty}</td>
        <td style="font-family:'Space Mono',monospace;">L$${s.unit.toLocaleString()}</td>
        <td style="font-family:'Space Mono',monospace;color:var(--accent);font-weight:700;">L$${s.total.toLocaleString()}</td>
        <td style="color:var(--muted);font-size:0.8rem;">${s.date}</td>
        <td><span class="status-badge sold">Sold</span></td>
      </tr>
    `).join('');
  }

  function renderInventory() {
    const tb = document.getElementById('inventoryTableBody');
    tb.innerHTML = inventory.map(p => {
      const margin = Math.round(((p.price - p.cost) / p.price) * 100);
      let status, statusClass;
      if (p.stock === 0) { status = 'Out of Stock'; statusClass = 'out'; }
      else if (p.stock < 5) { status = 'Low Stock'; statusClass = 'low'; }
      else { status = 'In Stock'; statusClass = 'good'; }
      const pct = Math.min(100, Math.round(p.stock / (p.stock + p.sold) * 100));
      return `
        <tr>
          <td><div class="product-name">${p.name}</div></td>
          <td style="color:var(--muted);font-size:0.8rem;">${p.cat}</td>
          <td>
            <div style="font-weight:600;">${p.stock}</div>
            <div class="inv-bar-bg" style="width:80px;margin-top:4px;"><div class="inv-bar-fill" style="width:${pct}%;background:${p.stock===0?'var(--accent2)':p.stock<5?'var(--orange)':'var(--green)'};"></div></div>
          </td>
          <td style="color:var(--muted);">${p.sold}</td>
          <td style="font-family:'Space Mono',monospace;font-size:0.82rem;">L$${p.cost.toLocaleString()}</td>
          <td style="font-family:'Space Mono',monospace;font-size:0.82rem;color:var(--accent);">L$${p.price.toLocaleString()}</td>
          <td style="color:var(--green);font-family:'Space Mono',monospace;font-size:0.82rem;">${margin}%</td>
          <td><span class="status-badge ${statusClass}">${status}</span></td>
        </tr>
      `;
    }).join('');
  }

  function renderCustomers() {
    const grid = document.getElementById('customersGrid');
    grid.innerHTML = customers.map(c => `
      <div class="customer-card">
        <div class="customer-avatar" style="background:${c.color}">${c.name.split(' ').map(n=>n[0]).join('')}</div>
        <div>
          <div class="customer-name">${c.name}</div>
          <div class="customer-meta">${c.phone} ¬∑ ${c.loc} ¬∑ ${c.orders} orders</div>
        </div>
        <div class="customer-spend">${c.spend}</div>
      </div>
    `).join('');
  }

  function renderExpenses() {
    const list = document.getElementById('expenseList');
    list.innerHTML = expenses.map(e => `
